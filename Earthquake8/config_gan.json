{
    "name": "Unet",
    "n_gpu": 1,

    "arch": {
        "type": "Unet",
        "args": {}
    },
    "data_loader": {

        "type": "EarthquakeDataLoader_gan",
        "args":{
            "seismic_path":"data/FYP_data/seis_sub_350IL_500t_1200XL.npy",
            "label_path": "data/FYP_data/fault_sub_350IL_500t_1200XL.npy",
            "batch_size": 64,
            "train_number_of_pictures": 2,
            "val_number_of_pictures": 7,
            "train_start": 0,
            "val_start": 200,
            "dimension": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0

        }
    },
    "loss": "bceloss",
    "metrics": [
        "IoU","accuracy1"
    ],
    "lr_scheduler2": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode":"min",
            "factor":0.1,
            "patience":5,
            "verbose":"True"
        }
    },
    "trainer": {
        "epochs": 4,
        "modelNo":0,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },

    "data_loader2": {

        "type": "EarthquakeDataLoader2",
        "args":{
            "seismic_path":"data/FYP_data/seis_sub_350IL_500t_1200XL.npy",
            "label_path": "data/FYP_data/fault_sub_350IL_500t_1200XL.npy",
            "batch_size": 64,
            "val_number_of_pictures": 4,
            "val_start": 200,
             "dimension": 0
        }
    }


}

